{
  "manifest_version": 3,
  "name": "CodZe",
  "version": "1.2",
  "description": "Focus on educational content only - blocks non-educational websites.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "storage",
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["fullscreen.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "icons": { 
    "48": "icon.png",
    "128": "icon.png"
  },
  "declarative_net_request": {
    "rule_resources": []
  }
}
